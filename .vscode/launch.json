  "version": "0.2.0",
  "configurations": [
    {
      // Since there are python tools in the repo, this allows you to run them faster in vscode
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: SSHNPD",
      "type": "python",
      "request": "launch",
      "cwd": "packages/sshnpdpy/",
      "program": "sshnpd.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      //replace your arguments with the ones you want to use
      "args": [
        "--atsign", "@chess69",
        "--manager", "@chess69lovely",
        "--device", "dev",
        "--username", "xavier"
      ]
    }
  ]
}
